generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

/* ---------------------------------
 * ENUMS
 * ---------------------------------*/
enum OrganizationRole {
  SUPER_ADMIN
  BILLING_ADMIN
}

enum TeamRole {
  TEAM_ADMIN
  TEAM_MEMBER
  GUEST
}

enum JobStatus {
  OPEN
  HOLD
  DRAFT
  CLOSED
}

enum ComplianceStatus {
  PENDING
  APPROVED
  FLAGGED
}

enum SocialPlatform {
  WEBSITE
  LINKEDIN
  FACEBOOK
  X
  INSTAGRAM
  OTHER
}

enum NotificationType {
  JOB_CREATED
  JOB_UPDATED
  TEAM_INVITE
  APPLICATION_SUBMITTED
  APPLICATION_STATUS_CHANGED
  GENERAL
}

enum ApplicationStatus {
  SUBMITTED
  REVIEWING
  SHORTLISTED
  REJECTED
  HIRED
}

enum MediaType {
  IMAGE
  VIDEO
}

/* ---------------------------------
 * EMBEDDED TYPES
 * ---------------------------------*/
type Address {
  street String
  city   String
  state  String
  zip    String
}

type Salary {
  min       Float?
  max       Float?
  currency  String?
  payPeriod String?
}

type Question {
  prompt   String
  required Boolean?
  type     String?
  options  String[]
}

type SelectionProcess {
  order       Int     @default(0)
  title       String
  description String?
}

type ThemeConfig {
  primaryColor    String?
  secondaryColor  String?
  accentColor     String?
  fontFamily      String?
  logoUrl         String?
  bannerUrl       String?
  layoutVariant   String?   
  headerLinks     Json? 
  footerLinks     Json?
  customCss       String?
}

/* ---------------------------------
 * AUTH & USERS
 * ---------------------------------*/
model User {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  name            String?
  email           String   @unique
  image           String?
  phone           String?
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")
  isActive        Boolean  @default(true)
  defaultTeamId   String?  @db.ObjectId @map("default_team_id")

  accounts             Account[]
  sessions             Session[]
  teamUsers            TeamUser[]
  organizationUsers    OrganizationUser[]
  profile              UserProfile?
  jobs                 Job[]    @relation("UserCreatedJobs")
  updatedJobs          Job[]    @relation("JobUpdatedByUser")
  localCredential      LocalCredential?
  notifications        Notification[]
  applicationsProcessed Application[] @relation("HRProcessedApplications")
  auditLogs            AuditLog[] @relation("UserAuditLogs")
  createdOrganizations Organization[]

  @@map("users")
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refreshToken      String? @map("refresh_token")
  accessToken       String? @map("access_token")
  expiresAt         Int?    @map("expires_at")
  tokenType         String? @map("token_type")
  scope             String?
  idToken           String? @map("id_token")
  sessionState      String? @map("session_state")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique @map("session_token")
  userId       String   @db.ObjectId @map("user_id")
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model LocalCredential {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  userId       String @unique @db.ObjectId @map("user_id")
  passwordHash String @map("password_hash")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("local_credentials")
}

/* Candidate Model (The Applicant) - NEW */
model Candidate {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  email         String   @unique
  name          String?
  phone         String?
  currentRole   String?
  linkedinUrl   String?
  resumeUrl     String?
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  applications Application[]

  @@map("candidates")
}

/* ---------------------------------
 * ORGANIZATIONS & TENANCY
 * ---------------------------------*/
model Organization {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  slug            String?   @unique
  primaryEmail    String?  @unique
  domain          String?  @unique
  subdomain       String?
  domainVerified  Boolean  @default(false)
  createdByUserId String   @db.ObjectId @map("created_by_user_id")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")
  logo            String?
  industry        String?
  address         Address?
  website         String?
  
  teams          Team[]
  organizationUsers OrganizationUser[] // NEW: Link to org-level users/roles
  socialAccounts SocialAccount[]
  createdBy      User @relation(fields: [createdByUserId], references: [id])
  auditLogs      AuditLog[] @relation("OrgAuditLogs")
  jobs           Job[]    @relation("OrganizationJobs")
  applications   Application[]
  notifications  Notification[]
  themeConfig    ThemeConfig? @map("theme_config")
  careerPages    CareerPage[]
  media          OrganizationMedia[]

  @@map("organizations")
}

/* Organization-level Admin Roles - NEW */
model OrganizationUser {
  id             String           @id @default(auto()) @map("_id") @db.ObjectId
  organizationId String           @db.ObjectId @map("organization_id")
  userId         String           @db.ObjectId @map("user_id")
  role           OrganizationRole

  organization Organization @relation(fields: [organizationId], references: [id])
  user         User         @relation(fields: [userId], references: [id])

  @@unique([organizationId, userId])
  @@map("organization_users")
}

/* Teams & roles within org */
model Team {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  description    String?
  organizationId String   @db.ObjectId @map("organization_id")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  organization Organization @relation(fields: [organizationId], references: [id])
  users          TeamUser[] // Users belonging to this team
  jobs         Job[]
  applications Application[] @relation("TeamProcessedApplications")

  @@unique([organizationId, name])
  @@map("teams")
}

model TeamUser {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  teamId     String   @db.ObjectId @map("team_id")
  userId     String   @db.ObjectId @map("user_id")
  role       TeamRole @default(TEAM_MEMBER)
  createdAt  DateTime @default(now()) @map("created_at")
  joinedAt   DateTime @default(now()) @map("joined_at")
  lastActive DateTime? @map("last_active")

  team Team @relation(fields: [teamId], references: [id])
  user User @relation(fields: [userId], references: [id])

  @@unique([teamId, userId])
  @@map("team_users")
}

model UserProfile { // RENAMED FROM OrganizationProfile
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @unique @db.ObjectId @map("user_id")
  phone     String?
  location  String?
  website   String?
  about     String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id])

  @@map("user_profiles")
}

/* ---------------------------------
 * RECRUITMENT & JOBS
 * ---------------------------------*/
model Job {
  id                      String             @id @default(auto()) @map("_id") @db.ObjectId
  title                   String
  employmentType          String?            @map("employment_type")
  workPreference          String?            @map("work_preference")
  seniority               String?            @map("job_seniority")
  minimumQualificationLvl String?            @map("minimum_qualification_lvl")
  skills                  String[]
  facilities              String[]
  description             String
  location                String?
  salary                  Salary?
  schedule                DateTime?
  platforms               String[]
  posterFileId            String?            @map("poster_file_id")
  posterPreview           String?            @map("poster_preview")
  organizationId          String             @db.ObjectId @map("organization_id")
  organizationName        String             @map("organization_name")
  organizationSite        String             @map("organization_site")
  questions               Question[]
  organization            Organization       @relation("OrganizationJobs", fields: [organizationId], references: [id])
  selectionProcess        SelectionProcess[] @map("selection_process")
  userId                  String             @db.ObjectId @map("user_id") // Creator/Owner
  teamId                  String             @db.ObjectId @map("team_id")
  createdAt               DateTime           @default(now()) @map("created_at")
  closedAt                DateTime?          @map("closed_at")
  updatedAt               DateTime           @updatedAt @map("updated_at")
  deletedAt               DateTime?          @map("deleted_at")
  status                  JobStatus          @default(DRAFT)
  aiContent               Json?              @map("ai_content")
  complianceStatus        ComplianceStatus   @default(PENDING) @map("compliance_status")
  candidatesApplied       Int?               @map("candidates_applied")
  completedInterviews     Int?               @map("completed_interviews")
  updatedByUserId         String?            @db.ObjectId @map("updated_by_user_id")

  createdBy   User         @relation("UserCreatedJobs", fields: [userId], references: [id])
  updatedBy   User?        @relation("JobUpdatedByUser", fields: [updatedByUserId], references: [id])
  team        Team         @relation(fields: [teamId], references: [id])
  socialPosts SocialPost[]
  applications Application[]
  analytics   JobAnalytics?

  @@index([status])
  @@index([title])
  @@index([teamId])
  @@index([teamId, status])
  @@index([organizationId])
  @@map("jobs")
}

model JobAnalytics {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  jobId     String   @unique @db.ObjectId @map("job_id")
  views     Int      @default(0)
  clicks    Int      @default(0)
  shares    Int      @default(0)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  job Job @relation(fields: [jobId], references: [id], onDelete: Cascade)

  @@map("job_analytics")
}

/* Applications */
model Application {
  id                  String            @id @default(auto()) @map("_id") @db.ObjectId
  candidateId         String            @db.ObjectId @map("candidate_id") // UPDATED: Now required, links to the Candidate model
  processedByUserId   String?           @db.ObjectId @map("processed_by_user_id") // HR User (made optional as candidate submits it)
  teamId              String            @db.ObjectId @map("team_id")              // Team responsible for processing
  jobId               String            @db.ObjectId @map("job_id")
  organizationId      String            @db.ObjectId @map("organization_id")
  status              ApplicationStatus @default(SUBMITTED)
  resumeUrl           String?
  coverLetter         String?
  notes               String?
  createdAt           DateTime          @default(now()) @map("created_at")
  updatedAt           DateTime          @updatedAt @map("updated_at")

  candidate       Candidate @relation(fields: [candidateId], references: [id])
  processedByUser User?     @relation("HRProcessedApplications", fields: [processedByUserId], references: [id])
  team            Team      @relation("TeamProcessedApplications", fields: [teamId], references: [id])
  job             Job       @relation(fields: [jobId], references: [id])
  organization    Organization @relation(fields: [organizationId], references: [id])

  // Ensures a candidate only applies to a specific job once
  @@unique([candidateId, jobId])
  @@index([organizationId])
  @@map("applications")
}

/* ---------------------------------
 * CMS & MEDIA
 * ---------------------------------*/
model CareerPage {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  organizationId String   @db.ObjectId @map("organization_id")
  slug           String   @map("slug")
  title          String
  content        Json
  order          Int?     @default(0)
  published      Boolean  @default(false)
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  organization Organization @relation(fields: [organizationId], references: [id])
  @@unique([organizationId, slug])
  @@index([organizationId])
  @@map("career_pages")
}

model OrganizationMedia {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  organizationId String   @db.ObjectId @map("organization_id")
  type           MediaType
  url            String
  altText        String?
  tags           String[]
  createdAt      DateTime @default(now()) @map("created_at")

  organization Organization @relation(fields: [organizationId], references: [id])
  @@index([organizationId])
  @@map("organization_media")
}

/* ---------------------------------
 * SOCIAL & NOTIFICATIONS
 * ---------------------------------*/
model SocialAccount {
  id             String         @id @default(auto()) @map("_id") @db.ObjectId
  organizationId String         @db.ObjectId @map("organization_id")
  platform       SocialPlatform
  accountId      String         @map("account_id")
  accessToken    String         @map("access_token")
  refreshToken   String?        @map("refresh_token")
  expiry         DateTime?
  createdAt      DateTime       @default(now()) @map("created_at")
  updatedAt      DateTime       @updatedAt @map("updated_at")

  organization Organization @relation(fields: [organizationId], references: [id])
  posts        SocialPost[]

  @@unique([organizationId, platform, accountId])
  @@map("social_accounts")
}

model SocialPost {
  id        String         @id @default(auto()) @map("_id") @db.ObjectId
  jobId     String         @db.ObjectId @map("job_id")
  accountId String         @db.ObjectId @map("account_id")
  platform  SocialPlatform
  postId    String         @map("post_id")
  url       String?
  createdAt DateTime       @default(now()) @map("created_at")

  job     Job           @relation(fields: [jobId], references: [id])
  account SocialAccount @relation(fields: [accountId], references: [id])

  @@unique([jobId, accountId])
  @@map("social_posts")
}

/* ---------------------------------
 * LOGS & AUDIT
 * ---------------------------------*/
model Notification {
  id             String           @id @default(auto()) @map("_id") @db.ObjectId
  userId         String           @db.ObjectId @map("user_id")
  organizationId String?          @db.ObjectId @map("organization_id")
  type           NotificationType
  message        String
  read           Boolean          @default(false)
  metadata       Json?
  createdAt      DateTime         @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id])
  organization Organization? @relation(fields: [organizationId], references: [id])

  @@map("notifications")
}

model AuditLog {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  userId         String?  @db.ObjectId @map("user_id")
  organizationId String?  @db.ObjectId @map("organization_id")
  action         String
  entityType     String
  entityId       String?
  details        Json?
  createdAt      DateTime @default(now()) @map("created_at")

  user          User?          @relation("UserAuditLogs", fields: [userId], references: [id])
  organization  Organization?  @relation("OrgAuditLogs", fields: [organizationId], references: [id])

  @@map("audit_logs")
}